<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane fx:id="mainContainer"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.omarkandil.exchange.login.Login"
          stylesheets="@login.css"
          prefHeight="400.0" prefWidth="600.0"
          orientation="VERTICAL"
          vgap="10"
          alignment="CENTER">
    <Label fx:id="titleLabel" styleClass="title" text="Login"/>
    <Label fx:id="usernameLabel" text="Username"/>
    <TextField fx:id="usernameTextField"/>
    <Label fx:id="passwordLabel" text="Password"/>
    <PasswordField fx:id="passwordTextField"/>
    <Button fx:id="loginButton" text="Login" onAction="#login"/>
</FlowPane>
