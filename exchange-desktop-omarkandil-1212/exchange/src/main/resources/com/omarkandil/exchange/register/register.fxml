<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>
<FlowPane fx:id="mainContainer"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.omarkandil.exchange.register.Register"
          stylesheets="@register.css"
          prefHeight="400.0" prefWidth="600.0"
          orientation="VERTICAL"
          vgap="10"
          alignment="CENTER">

    <Label fx:id="titleLabel" styleClass="title" text="Create New Account"/>
    <Label fx:id="usernameLabel" text="Username"/>
    <TextField fx:id="usernameTextField"/>
    <Label fx:id="passwordLabel" text="Password"/>
    <PasswordField fx:id="passwordTextField"/>
    <Button fx:id="createAccountButton" text="Create Account" onAction="#register"/>
</FlowPane>
